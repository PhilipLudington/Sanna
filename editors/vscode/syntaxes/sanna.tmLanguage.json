{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Sanna",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#attributes" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#numbers" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.documentation.sanna",
          "begin": "/\\*\\*",
          "end": "\\*/",
          "captures": {
            "0": { "name": "punctuation.definition.comment.sanna" }
          }
        },
        {
          "name": "comment.block.sanna",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": { "name": "punctuation.definition.comment.sanna" }
          }
        },
        {
          "name": "comment.line.documentation.sanna",
          "match": "///.*$"
        },
        {
          "name": "comment.line.double-slash.sanna",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sanna",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sanna",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.sanna",
          "match": "@(author|confidence|needs_review|approved|trusted|deprecated|hint|pure|impure|effect|ai_generated|verified)\\b"
        },
        {
          "name": "entity.other.attribute-name.sanna",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.specification.sanna",
          "match": "\\b(spec|type|model|interface|impl|module|import)\\b"
        },
        {
          "name": "keyword.control.contract.sanna",
          "match": "\\b(requires|ensures|modifies|invariant|axiom|lemma)\\b"
        },
        {
          "name": "keyword.control.flow.sanna",
          "match": "\\b(if|then|else|match|let|in)\\b"
        },
        {
          "name": "keyword.control.quantifier.sanna",
          "match": "\\b(forall|exists|such_that)\\b"
        },
        {
          "name": "keyword.operator.logical.sanna",
          "match": "\\b(and|or|not|implies)\\b"
        },
        {
          "name": "keyword.other.sanna",
          "match": "\\b(pure|old|result|trusted)\\b"
        },
        {
          "name": "constant.language.boolean.sanna",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "keyword.operator.set.sanna",
          "match": "\\b(union|intersect|subset|empty|in)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.sanna",
          "match": "\\b(Int|Nat|Bool|String|Float|Unit|Void)\\b"
        },
        {
          "name": "support.type.collection.sanna",
          "match": "\\b(List|Set|Map|Option|Result|Array|Seq)\\b"
        },
        {
          "name": "support.type.domain.sanna",
          "match": "\\b(Money|DateTime|Duration|Email|Url|UUID)\\b"
        },
        {
          "name": "entity.name.type.sanna",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.sanna",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.sanna",
          "match": "(=>|<=>|&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.sanna",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.arrow.sanna",
          "match": "(->|::|\\.\\.)"
        },
        {
          "name": "keyword.operator.assignment.sanna",
          "match": "="
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.sanna",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.float.sanna",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.sanna",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.sanna",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.sanna"
}
